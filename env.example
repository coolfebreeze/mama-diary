# Database Configuration
DB_USER=analytics_user
DB_PASSWORD=analytics_pass
DB_URL=postgresql+asyncpg://analytics_user:analytics_pass@postgres:5432/analytics

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=1800

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Settings
ANALYTICS_TOKEN=your-secret-analytics-token-here
MAX_BULK_SIZE=1000
MAX_GZIP_SIZE=10485760
RATE_LIMIT_PER_MINUTE=1000

# TimescaleDB Settings
COMPRESSION_AFTER_DAYS=7
RETENTION_DAYS=180
CHUNK_TIME_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# pgAdmin (optional)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
